<Window x:Class="GIBDD_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="ДТП" Margin="10" Click="AccidentsButton_Click"/>
            <Button Content="Водители" Margin="10" Click="DriversButton_Click"/>
            <Button Content="Офицеры" Margin="10" Click="OfficersButton_Click"/>
            <Button Content="Нарушения" Margin="10" Click="ViolationsButton_Click"/>
            <Button Content="Транспортные средства" Margin="10" Click="VehiclesButton_Click"/>
            <Button Content="Выход" Margin="10" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
