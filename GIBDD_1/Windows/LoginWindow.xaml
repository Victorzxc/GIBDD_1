<Window x:Class="GIBDD_1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="300">

    <StackPanel Margin="10">
        <Label Content="Фамилия:"/>
        <TextBox x:Name="LastNameTextBox"/>

        <Label Content="Имя:"/>
        <TextBox x:Name="FirstNameTextBox"/>

        <Label Content="Отчество:"/>
        <TextBox x:Name="MiddleNameTextBox"/>

        <Label Content="Номер офицера:"/>
        <TextBox x:Name="OfficerNumberTextBox"/>


        <Button x:Name="LoginButton" Content="Войти" Click="LoginButton_Click"/>
    </StackPanel>

</Window>
