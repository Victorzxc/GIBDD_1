<Window x:Class="GIBDD_1.AddOfficerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Добавить офицера" Height="350" Width="300">
    <StackPanel Margin="10">
        <Label Content="Фамилия:"/>
        <TextBox x:Name="LastNameTextBox"/>
        <Label Content="Имя:"/>
        <TextBox x:Name="FirstNameTextBox"/>
        <Label Content="Отчество:"/>
        <TextBox x:Name="MiddleNameTextBox"/>
        <Label Content="Номер офицера:"/>
        <TextBox x:Name="OfficerNumberTextBox"/>
        <Label Content="Звание:"/>
        <TextBox x:Name="TitleTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
