<Window x:Class="GIBDD_1.AddAccidentParticipantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить участника ДТП" Height="300" Width="300">
    <StackPanel Margin="10">
        <Label Content="Водитель:"/>
        <ComboBox x:Name="DriverComboBox" DisplayMemberPath="LastName"/>
        <Label Content="Транспортное средство:"/>
        <ComboBox x:Name="VehicleComboBox" DisplayMemberPath="RegistrationNumber"/>
        <Label Content="Роль:"/>
        <TextBox x:Name="RoleTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Margin="0,0,5,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
