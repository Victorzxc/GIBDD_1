<Window x:Class="GIBDD_1.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Добавить транспортное средство" Height="380" Width="300">
    <StackPanel Margin="10">
        <Label Content="Регистрационный номер:"/>
        <TextBox x:Name="RegistrationNumberTextBox"/>
        <Label Content="VIN:"/>
        <TextBox x:Name="VinTextBox"/>
        <Label Content="Марка:"/>
        <TextBox x:Name="MakeTextBox"/>
        <Label Content="Модель:"/>
        <TextBox x:Name="ModelTextBox"/>
        <Label Content="Год:"/>
        <TextBox x:Name="YearTextBox"/>
        <Label Content="Водитель:"/>
        <ComboBox x:Name="DriverComboBox" DisplayMemberPath="LastName"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
